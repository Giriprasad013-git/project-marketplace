# ===================================
# BASE CONFIGURATION
# ===================================
NEXT_PUBLIC_BASE_URL=https://academicshop.preview.emergentagent.com
CORS_ORIGINS=*

# ===================================
# SUPABASE CONFIGURATION
# ===================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=url
NEXT_PUBLIC_SUPABASE_ANON_KEY=key
SUPABASE_SERVICE_ROLE_KEY=key

# ===================================
# STRIPE CONFIGURATION
# ===================================
# TODO: Get your keys from: https://dashboard.stripe.com/test/apikeys
# For testing: Use test mode keys (starts with sk_test_ and pk_test_)
# For production: Use live mode keys (starts with sk_live_ and pk_live_)
STRIPE_API_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Get webhook secret from: https://dashboard.stripe.com/test/webhooks
# After creating a webhook endpoint
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ===================================
# AUTHENTICATION
# ===================================
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=your_super_secure_jwt_secret_here

# ===================================
# FILE STORAGE (OPTIONAL - Choose one)
# ===================================
# Option 1: Use Supabase Storage (easiest)
# Already included in Supabase setup above

# Option 2: Use Cloudflare R2 (recommended for production)
# R2_ACCOUNT_ID=your_cloudflare_account_id
# R2_ACCESS_KEY_ID=your_r2_access_key
# R2_SECRET_ACCESS_KEY=your_r2_secret_key
# R2_BUCKET_NAME=academic-projects

# ===================================
# EMAIL NOTIFICATIONS (OPTIONAL)
# ===================================
# Get your API key from: https://resend.com/api-keys
# RESEND_API_KEY=re_your_resend_api_key_here
# RESEND_FROM_EMAIL=noreply@yourdomain.com